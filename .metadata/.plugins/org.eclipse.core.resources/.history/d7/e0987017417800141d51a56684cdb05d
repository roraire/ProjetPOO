package Controller;

import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;


public class Mouse extends MouseAdapter {

	int x,y;
	
	public Mouse(){
	}
	
	
	@Override
	public void mouseClicked(MouseEvent e) {
		super.mouseClicked(e);
		int xCord =e.getX();
		int yCord=e.getY();
		this.verfierCase(xCord, yCord);
		
		
	}

	public void verfierCase(int xCord,int yCord){
		
		boolean cond=false;
		
		
		if(xCord>19 && xCord<321 && yCord>19 && yCord<321){
			System.out.println("x="+xCord);
			System.out.println("y="+yCord);
		
			
		
					
					//System.out.println("case x="+x);
					//System.out.println("case y="+y);
				
					for(int i=0;i<=10;i++){
					if(xCord<20+(i+1)*30 && xCord>20+i*30 )  {
					x=i;
					System.out.println("i="+x);
					}
					}
					
					
					for(int j=0;j<=10;j++){
					if(yCord<20+(j+1)*30 && yCord>20+j*30){
					y=j;
					System.out.println("j="+y);
					}
					}
					
				}
				
			
	
		}
		
	
	@Override
	public void mouseEntered(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseExited(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mousePressed(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseReleased(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

}
